
@{
    ViewData["Title"] = "Login";
}
@model AdminViewModel
<h1>Login</h1>
<form asp-controller="Admins" asp-action="Login" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email" asp-for="Email">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" asp-for="Password">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>